<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawerActivity">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="710dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/revenue_container"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pendapatanKapan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="65dp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingTop="20dp"
                                android:text="Pendapatan Hari ini"
                                android:textAlignment="center"
                                android:textSize="28dp" />

                            <TextView
                                android:id="@+id/nominalPendapatan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Rp0"
                                android:textAlignment="center"
                                android:textColor="#E62E7D32"
                                android:textSize="36dp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="50dp"
                                android:layout_marginHorizontal="20dp"
                                app:dividerColor="@color/black"
                                android:alpha="0.3"/>

                            <TextView
                                android:id="@+id/pendapatanTodayLastWeek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Naik Rp 20.000 dari hari Jum'at minggu lalu"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginHorizontal="20dp"/>
                        </LinearLayout>




                    </androidx.cardview.widget.CardView>





                </LinearLayout>

            </ScrollView>


        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>












