<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECECEC"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawerActivity">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/DailyRevenue_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="20dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pendapatanKapan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingTop="20dp"
                                android:text="Pendapatan Hari ini"
                                android:textAlignment="center"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/nominalPendapatan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Rp0"
                                android:textAlignment="center"
                                android:textColor="#E62E7D32"
                                android:textSize="36dp" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="20dp"
                                android:alpha="0.3"
                                app:dividerColor="@color/black" />

                            <TextView
                                android:id="@+id/pendapatanTodayLastWeek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Naik Rp 20.000 dari hari Jum'at minggu lalu"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/MonthlyRevenue_Container"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.7"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="20dp"
                                    android:text="Bulan ini"
                                    android:textAlignment="center"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/pendapatanBulanIni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="Rp21.000.000"
                                    android:textAlignment="center"
                                    android:textColor="#E6255C27"
                                    android:textSize="20dp" />

                                <com.google.android.material.divider.MaterialDivider
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="20dp"
                                    android:alpha="0.3"
                                    app:dividerColor="@color/black" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Naik Rp 20.000.000 dari tanggal ini bulan lalu"
                                    android:textSize="10sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>




                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.5"
                            android:backgroundTint="#BED5E3"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:layout_marginTop="10dp"
                                    android:scaleType="fitCenter"
                                    android:scaleX="0.75"
                                    android:scaleY="0.75"
                                    android:src="@drawable/ic_analytics" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="Analytics"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:id="@+id/WeeklyRevenue_Container"
                            android:layout_width="0dp"
                            android:layout_height="170dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.7"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:id="@+id/resetButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reset"
                                android:padding="5dp"
                                android:layout_marginTop="17dp"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:layout_marginRight="20dp"
                                android:textSize="12dp"
                                android:visibility="gone"
                                android:fontFamily="@font/poppins_bold"/>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical">



                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="20dp"
                                    android:text="Minggu ini"
                                    android:textAlignment="center"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/pendapatanMingguIni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="Rp21.000.000"
                                    android:textAlignment="center"
                                    android:textColor="#E6255C27"
                                    android:textSize="20dp" />

                                <com.google.android.material.divider.MaterialDivider
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="20dp"
                                    android:alpha="0.3"
                                    app:dividerColor="@color/black" />

                                <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginHorizontal="12dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Jum'at"
                                        android:layout_marginTop="1.5dp"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textSize="12dp"/>

                                    <LinearLayout
                                        android:id="@+id/day1_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>



                                    <LinearLayout
                                        android:id="@+id/day2_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/day3_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/day4_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/day5_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day5"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/day6_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day6"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/day7_container"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="5dp"
                                        android:padding="7.5dp"
                                        android:clickable="true"
                                        android:gravity="center">

                                        <View
                                            android:id="@+id/day7"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:foregroundGravity="center"
                                            android:background="@drawable/outline"
                                            android:clickable="false"
                                            android:layout_gravity="center"/>

                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="Kamis"
                                        android:layout_marginTop="1dp"
                                        android:gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textSize="12dp"/>
                                </LinearLayout>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/HistoryContainer"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/divider"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:layout_marginTop="10dp"
                                    android:scaleType="fitCenter"
                                    android:scaleX="0.75"
                                    android:scaleY="0.75"
                                    android:src="@drawable/ic_history" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="History"
                                    android:textColor="@color/black"
                                    android:textSize="16dp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/YearlyRevenue_container"
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.7"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="16dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingTop="20dp"
                                    android:text="Tahun ini"
                                    android:textAlignment="center"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/pendapatanTahunIni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.7"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="Rp21.000.000"
                                    android:textAlignment="center"
                                    android:textColor="#E6255C27"
                                    android:textSize="20dp" />

                                <com.google.android.material.divider.MaterialDivider
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="20dp"
                                    android:alpha="0.3"
                                    app:dividerColor="@color/black" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="20dp"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="-"
                                    android:textSize="10sp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

            </ScrollView>


        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>












